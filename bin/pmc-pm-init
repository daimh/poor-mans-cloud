#!/usr/bin/env bash
. /etc/pmc.conf
OPTS=$(getopt -o hv --long help,version -n "$(basename $0)" -- "$@")
eval set -- "$OPTS"
while :
do
	case "$1" in
#@ HELP_START
#@ NAME
#@ 	pmc-pm-init - initialize a physical host (PM)
#@ SYNOPSIS
#@ 	pmc-pm-init [OPTION]... PM
#@ EXAMPLES
#@ 	pmc-pm-init PM
#@ DESCRIPTION
		-h | --help) #@ display this help message and exit
			die ;;
		--version) #@ display version information and exit
			die 20251206 ;;
		-v | --verbose) #@ enable verbose output
			VERBOSE="set -x"
			$VERBOSE
			shift ;;
		--)
			[ $# -eq 2 ] || die "ERR-1001: PM is missing"
			PM=$2
			shift 2
			break ;;
		*)
			break ;;
#@ AUTHOR
#@ 	Manhong Dai <manhongdai@gmail.com>
#@ COPYRIGHT
#@	Copyright Â© 2025 MIT License.
#@	This is free software: you are free to use, modify, and redistribute it
#@	under the terms of the MIT License. There is NO WARRANTY, to the extent
#@	permitted by law.
#@ HELP_END
	esac
done
element_in_array $PM ${PM_LIST[@]} \
	|| die "ERR-1002: add $PM to PM_LIST in /etc/pmc.conf first, please"
ssh -t $PM "
$VERBOSE
set -Eeuo pipefail
$DIE_FUNC
echo '# checking hostname'
[ \"\$(hostname)\" = \"$PM\" ]
if [ -f /etc/arch-release ]
then
	pacman -S --needed libvirt qemu virt-install virt-viewer \
		openbsd-netcat python xdelta3 which lvm2
fi
echo '# checking drbdadm'
which drbdadm
echo '# checking xdelta3'
which xdelta3
echo '# checking python'
python --version
echo '# checking drbd'
modprobe drbd
cat /proc/drbd
echo '# checking libvirtd'
systemctl start libvirtd
systemctl enable libvirtd
virsh list
echo '# checking br0'
ip a s br0
echo '# checking vg'
vgdisplay $VG_NAME
echo '## VM_BACKUP_DIR'
[ -d \"$VM_BACKUP_DIR\" ] \
	|| die \"ERR-1003: $VM_BACKUP_DIR does not exist\"
echo '##PASS'
"
for N in "${PM_LIST[@]}"
do
	[ "$N" == "$PM" ] && continue
	ssh $N "ssh $PM hostname \
		|| ssh-keyscan -t rsa $PM >> /root/.ssh/known_hosts" &> /dev/null
	ssh $PM "ssh $N hostname \
		|| ssh-keyscan -t rsa $N >> /root/.ssh/known_hosts" &> /dev/null
done
