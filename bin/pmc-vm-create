#!/usr/bin/env bash
. /etc/pmc.conf
function read_yes_no() {
	while :
	do
		read -p "${1}? (Y/n)" CONT
		if [ "$CONT" = "" -o "$CONT" = "y" -o "$CONT" = "Y" ]
		then
			return 0
		elif [ "$CONT" = "n" -o "$CONT" = "N" ]
		then
			return 1
		else
				echo "enter 'y' or 'n' only."
		fi
	done
}
function set_drbd() {
	for PM in ${PMS[@]}
	do
		ssh -T $PM << EOF
$VERBOSE
echo "##DRBD@$PM"
if [ -f /etc/drbd.d/$VM.res ]
then
	echo "ERR-2500: /etc/drbd.d/$VM.res exists in host $PM, use 'pmc-vm-rm'"
	exit 1
fi
if lvdisplay $VG_NAME/$VM 2> /dev/null
then
	echo "ERR-2501: $VG_NAME/$VM exists in host $PM, use 'pmc-vm-rm'"
	exit 1
fi
lvcreate -y -L ${STORAGE}G -n $VM $VG_NAME
IP0=\$(host ${PMS[0]} | cut -d " " -f 4)
if [ ${#PMS[@]} -gt 1 ]
then
	IP1=\$(host ${PMS[1]} | cut -d " " -f 4)
fi
let PORT=7778+$VID

cat > /etc/drbd.d/$VM.res << EEOOFF
resource $VM {
	meta-disk internal;
	device /dev/drbd$VID minor $VID;
	disk /dev/$VG_NAME/$VM;
	on ${PMS[0]} {
		address \$IP0:\$PORT;
	}
EEOOFF
if [ ${#PMS[@]} -gt 1 ]
then
cat >> /etc/drbd.d/$VM.res << EEOOFF
	on ${PMS[1]} {
		address \$IP1:\$PORT;
	}
EEOOFF
fi
cat >> /etc/drbd.d/$VM.res << EEOOFF
	disk {
		no-disk-flushes;
	}
	net {
		allow-two-primaries yes;
	}
}
EEOOFF
drbdadm create-md --force $VM
if [ ${#PMS[@]} -eq 1 ]
then
	drbdadm up $VM 2> /dev/null
	drbdadm primary $VM --force
else
	drbdadm up $VM
	if [ "$PM" = "${PMS[0]}" ]
	then
		drbdadm -- --overwrite-data-of-peer primary $VM
	else
		drbdadm disconnect $VM
		drbdadm connect --discard-my-data $VM
	fi
fi
EOF
		[ $? -eq 0 ] || die "ERR-2502: set_drbd failed on host $PM"
	done
	for ((i=0; i<100; i++))
	do
		ssh ${PMS[0]} drbdadm status $VM |grep -q "disk:UpToDate" && return 0
		sleep 1
	done
	die "ERR-2503: drbd failure on host ${PMS[0]}"
}
function check_resource() {
	for PM in ${PMS[@]}
	do
		element_in_array $PM "${PM_LIST[@]}" \
			|| die "ERR-2101: $PM is not defined in etc/pmc/pmc.conf"
		if ! ssh -T $PM << EOF
$VERBOSE
let rtn=0
let MEMUSED=\$(virsh list --all --name | sed "/^$/d" | while read VM
do
	virsh dominfo $VM 2>/dev/null | grep "Max memory:"
done | awk 'BEGIN{MEMUSED=0}{MEMUSED += \$3}END{print MEMUSED}'
)
let MEMTOTAL=\$(grep ^MemTotal: /proc/meminfo \
	| sed -e "s/^MemTotal: *//; s/ kB//")
if (( \$MEMTOTAL - \$MEMUSED < 1048576 ))
then
	echo "no enough memory"
	let rtn=1
fi
if [ "$STORAGE" != "reuse" ]
then
	if [ \$(vgdisplay --units=G $VG_NAME \
		| grep "Free  PE" \
		| cut -d "/" -f 3 \
		| cut -d " " -f 2 \
		| sed -e "s/\\..*//") -le $STORAGE ]
	then
		echo "$VG_NAME on $PM is getting full"
		let rtn=1
	fi
fi
exit \$rtn
EOF
		then
			if ! read_yes_no "Continue"
			then
				echo "#Quit"
				exit 1
			fi
		fi
	done
}

VIRT_INSTALL_OPTS=""
ISO=""
Short="hvp:s:m:c:i:a:V:C:F:"
Long="help,version,physical-host:,storage:,memory:,vcpus:,iso:,ip-address:\
,virt-install-options:,clone-vm:clone-vm-from-physical-host:"
OPTS=$(getopt -o $Short --long $Long -n "$(basename $0)" -- "$@")
eval set -- "$OPTS"
declare -a PMS
while [ $# -gt 0 ]
do
	case "$1" in
#@ HELP_START
#@ NAME
#@ 	pmc-vm-create - create a virtual machine (VM)
#@ SYNOPSIS
#@ 	pmc-vm-create [OPTION]... VM
#@ EXAMPLES
#@ 	pmc-vm-create -p pm-1 -p pm-2 -s 50 -m 4 -c 8 \
#@			-V "--nographics --pxe --osinfo linux2024" vm-2
#@ DESCRIPTION
		-h | --help) #@ display this help message and exit
			die ;;
		--version) #@ display version information and exit
			die 20251206 ;;
		-v | --verbose) #@ enable verbose output
			VERBOSE="set -x"
			$VERBOSE
			shift ;;
		-p | --physical-host) #@ =[PM]
			#@ specify the physical host(s) where the VM will be created,
			#@ can be specified once or twice
			PMS+=($2)
			shift 2 ;;
		-s | --storage) #@ =[SIZE]
			#@ storage size in gigabytes, or 'reuse' to use an existing
			#@ DRBD device for advanced re-installation
			STORAGE=$2
			if [ "$STORAGE" != "reuse" ]
			then
				let STORAGE=$2
			fi
			shift 2 ;;
		-m | --memory) #@ =[SIZE]
			#@ memory size in gigabytes for the VM
			let MEMORY=1024*$2
			shift 2 ;;
		-c | --vcpus) #@ =[NUMBER]
			#@ number of virtual CPUs for this VM
			let VCPUS=$2
			shift 2 ;;
		-i | --iso) #@ =[ISO]
			#@ optional installation ISO file under /usr/lib/pmc/iso/.
			ISO=$2
			shift 2 ;;
		-a | --ip-address) #@ =[IP]
			#@ optional IPv4 address for the VM if the hostname cannot be
			#@ resolved via DNS.
			IP=$2
			shift 2 ;;
		-V | --virt-install-options) #@ =[OPTS]
			#@ optional virt-install options
			VIRT_INSTALL_OPTS="$2"
			shift 2 ;;
		-C | --clone-vm) #@ =[VM]
			#@ optional IPv4 address for the VM if the hostname cannot be
			#@ resolved via DNS
			CLONEVM="$2"
			shift 2 ;;
		-F | --clone-vm-from-physical-host) #@ =[PM]
			#@ optional. Use a disk image from an existing physical host to
			#@ create the VM.
			CLONEPM=$2
			shift 2 ;;
		--)
			[ $# -eq 2 ] || die "ERR-2001: VM is missing"
			VM=$2
			shift 2
			break ;;
		*)
			break ;;
#@ AUTHOR
#@ 	Manhong Dai <manhongdai@gmail.com>
#@ COPYRIGHT
#@	Copyright Â© 2025 MIT License.
#@	This is free software: you are free to use, modify, and redistribute it
#@	under the terms of the MIT License. There is NO WARRANTY, to the extent
#@	permitted by law.
#@ HELP_END
	esac
done
if [ $# -ne 0 ]
then
	die "ERR-2002: use -h/--help"
elif [ ${#PMS[@]} -eq 0 ]
then
	die "ERR-2003: -p/--physical-host is mandatory"
elif [ "$STORAGE" = "" ]
then
	die "ERR-2019: -s/--storage is wrong"
elif [ "$STORAGE" != "reuse" -a "$STORAGE" = "0" ]
then
	die "ERR-2004: -s/--storage is wrong"
elif [ "$MEMORY" = "" ]
then
	die "ERR-2020: -m/--memory is wrong"
elif [ $MEMORY -le 0 ]
then
	die "ERR-2005: -m/--memory is wrong"
elif [ "$VCPUS" = "" ]
then
	die "ERR-2021: -c/--vcpus is wrong"
elif [ "$VCPUS" -le 0 ]
then
	die "ERR-2006: -c/--vcpus is wrong"
elif ! echo $VM | grep -Eq '^[a-z0-9-]+$'
then
	die "ERR-2008: $VM should be [a-z0-9-]"
elif [ ${#PMS[@]} -ne 1 -a ${#PMS[@]} -ne 2 ]
then
	die "ERR-2009: up to two -p are supported for now"
fi
if [[ -v CLONEVM ]]
then
	if [ -z "$CLONEPM" ]
	then
		for PM in ${PMS[0]} ${PM_LIST[@]}
		do
			ssh -n $PM "drbdadm status $CLONEVM" \
				| grep -q "^$CLONEVM role:Primary" \
				|| continue
			CLONEPM=$PM
			break
		done
	else
		ssh -n $CLONEPM "drbdadm status $CLONEVM" \
			| grep -q "^$CLONEVM role:Primary" \
			|| die "ERR-2010: drbd resource $CLONEVM is not in primary \
status on $CLONEPM"
	fi
	echo $CLONEPM
fi
check_resource
if [ "$ISO" != "" ]
then
	rsync -a --progress $PMC_HOME/usr/lib/pmc/iso/$ISO.iso \
		${PMS[0]}:/var/lib/libvirt/images/iso/
fi
for PM in ${PM_LIST[@]}
do
	! ssh $PM virsh dominfo $VM 2> /dev/null \
		| grep -q "State:          running" \
		|| die "ERR-2011: $VM is running on $PM, run \"pmc-vm-rm $VM\" \
or stop the VM before running 'pmc-vm-create -R'"
done

if [[ ! -v IP ]]
then
	IP=$(host $VM) || die "ERR-2012: $VM not in DNS, use '-a'"
elif [[ ! $IP =~ ^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$ ]]
then
		die "ERR-2013: invalid IP address $IP"
fi
IP=$(echo $IP | cut -d " " -f 4)
MAC=$( (echo "obase=16;"; echo $IP | cut -d . -f 3- | sed -e "s/\./\n/g" ) \
	| bc | sed -e "s/^.$/0&/" | sed -e "N; s/\n/:/g" \
	| sed -e "s/^/52:54:00:$MAC4:/" )
let VID=$( echo $MAC | cut -c 13- | sed -e "s/^/ibase=16;\n/; s/://g" | bc )

##Set storage
if [ ${#PMS[@]} -le 2 ]
then
	DISK=/dev/drbd$VID
	if [ "$STORAGE" != "reuse" ]
	then
		set_drbd
	else
		ssh -n ${PMS[0]} drbdadm status $VM \
			|| die "ERR-2007: Drbd resource $VM does not exist on ${PMS[0]}"
		exit 9
	fi
	if [ ${#PMS[@]} -eq 2 ]
	then
		CPU=$( ssh ${PMS[0]} "virsh cpu-baseline --migratable <( \
				virsh capabilities; ssh ${PMS[1]} virsh capabilities)" \
			| grep "<model \|feature policy='require'" \
			| sed -e "s/.*>\(.*\)<\/model>/\1/; s/.*name='\(.*\)'\/>/\1/" \
			| sed -e :a -e "N;s/\n/,require=/;ta" )
		[ -n "$CPU" ] || die 'ERR-2014: Incompatible CPU between the two hosts'
	else
		CPU=host
	fi
else
	die 'ERR-2017: three or more PM are not supported yet'
	exit 1
fi

ssh -t ${PMS[0]} "virsh undefine $VM" &> /dev/null || echo -n
if [[ -v CLONEVM ]]
then
	CLONEVID=$(ssh -n $CLONEPM "grep '^	device /dev/drbd' \
		/etc/drbd.d/$CLONEVM.res | sed -e 's/;//; s/^.*minor //'")
	[ -n "$CLONEVID" ] || die "ERR-2020: cannot find VID for $CLONEVM"
	[ $(ssh -n $CLONEPM "grep -w drbd$CLONEVID /proc/partitions" \
		| tr -s " " \
		| cut -d " " -f 4) -le $(ssh -n ${PMS[0]} \
			"grep -w drbd$VID /proc/partitions" | tr -s " " \
			| cut -d " " -f 4) \
	] || die "ERR-2022: -s is too small for the VM you want to clone"
	ssh -n ${PMS[0]} drbdadm primary $VM
	if [ "${PMS[0]}" = "$CLONEPM" ]
	then
		ssh -n $CLONEPM dd if=/dev/drbd$CLONEVID of=/dev/drbd$VID \
			bs=4M oflag=sync status=progress
	else
		ssh -n ${PMS[0]} "ssh -n $CLONEPM dd if=/dev/drbd$CLONEVID bs=4M \
			| dd of=/dev/drbd$VID bs=4M oflag=sync status=progress"
	fi
	VIRT_INSTALL_OPTS="$VIRT_INSTALL_OPTS --import"
fi
if [ -n "$ISO" ]
then
	VIRT_INSTALL_OPTS="$VIRT_INSTALL_OPTS --cdrom \
		/var/lib/libvirt/images/iso/$ISO.iso --boot cdrom,hd,menu=on"
fi
ssh -tY ${PMS[0]} virt-install --name $VM --memory ${MEMORY} --vcpus $VCPUS \
	--cpu $CPU --network bridge=br0,mac=$MAC,model=virtio --virt-type kvm \
	--disk $DISK "$VIRT_INSTALL_OPTS"
#peers
if [ ${#PMS[@]} -eq 2 ]
then
	ssh -T ${PMS[1]} << EOF
$VERBOSE
virsh undefine $VM &> /dev/null || echo -n
rsync -a ${PMS[0]}:/etc/libvirt/qemu/$VM.xml /etc/libvirt/qemu/
virsh define /etc/libvirt/qemu/$VM.xml
EOF
fi
echo "# Done!"
