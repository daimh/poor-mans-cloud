#!/usr/bin/env bash
. /etc/pmc.conf
OPTS=$(getopt -o hv --long help,version -n "$(basename $0)" -- "$@")
eval set -- "$OPTS"
while [ $# -gt 0 ]
do
	case "$1" in
#@ HELP_START
#@ NAME
#@ 	pmc-pm-ls - list all PMs
#@ SYNOPSIS
#@ 	pmc-pm-ls [OPTION]...
#@ EXAMPLES
#@ 	pmc-pm-ls
#@ DESCRIPTION
		-h | --help) #@ display this help message and exit
			die ;;
		--version) #@ display version information and exit
			die 20251206 ;;
		-v) #@ enable verbose output
			VERBOSE="set -x"
			$VERBOSE
			shift ;;
		--)
			shift ;;
		*)
			break ;;
