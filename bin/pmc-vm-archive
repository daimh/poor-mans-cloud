#!/usr/bin/env bash
#20190926 archive
#20190820
set -e
. /etc/pmc.conf
[ "$ARCHIVE_DIR" != "" ] || help "ERR-8000: ARCHIVE_DIR is not defined in /etc/pmc.conf"
OPTS=$(getopt -o hv --long help,verbose -n "$(basename $0)" -- "$@")
eval set -- "$OPTS"
while :
do
	case "$1" in
#SYNOPSIS:
#	pmc-vm-archive [OPTION]... VM
#EXAMPLE:
#	pmc-vm-archive wsus
		-h | --help)
			help ;;
		-v | --verbose)	#optional, verbose
			set -x
			shift ;;
		--)
			VM=$2
			shift 2 || help "ERR-8001: VM is missing"
			break ;;
		*)
			break ;;
	esac
done
if [ $# -ne 0 ]
then
	help "ERR-8002: use -h/--help"
fi

for PM in ${PM_LIST[@]}
do
	read TMP STATE < <( ssh -n $PM "virsh dominfo $VM 2>/dev/null |grep \"^State:\"; exit 0" ) || continue
	if [ "$STATE" = "running" ]
	then
		PRIMARY=$PM
	elif [ "$STATE" = "shut off" ]
	then
		SECONDARY=$PM
	fi
done
[ "$PRIMARY" != "" ] || help "ERR-8003: no such a VM $VM"
[ "$SECONDARY" != "" ] || help "ERR-8004: This VM is not created on two PMs"
HELP_FUNC=$(type help | tail -n +2)
TS=$(date +%+4Y%m%d%H%M%S)
ssh -T $SECONDARY << EOF
	[[ $- == *x* ]] && set -x
	set -e
	$HELP_FUNC
	[ "\$(drbdadm status $VM | grep disk:UpToDate | wc -l)" = "2" ] || help "ERR-8005: This VM's drbd is not in a normal status"
	VID=\$(grep "^	device /dev/drbd" /etc/drbd.d/$VM.res | sed -e "s/;//; s/^.*minor //")
	cd "$ARCHIVE_DIR"
	drbdadm primary $VM
	if [ -f $VM.base ]
	then
		xdelta3 -e -v -S djw -s $VM.base /dev/drbd\$VID $VM.$TS
	else
		dd if=/dev/drbd\$VID of=$VM.base bs=16M status=progress
	fi
	drbdadm secondary $VM
EOF
